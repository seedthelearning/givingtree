<div id='sign_up_form' class='well span3'>
  <h2>Sign up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label :email %><br />
      <%= f.email_field :email, id: 'sign_up_user_email' %></div>

    <div><%= f.label :password %><br />
    <%= f.password_field :password, id: 'sign_up_user_password' %></div>

    <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, id: 'sign_up_user_password_confirmation' %></div>

    <div><%= f.submit "Sign up" %></div>
  <% end %>
</div>
