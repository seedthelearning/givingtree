previous_data = null

update_totals = ->
  request = $.get "/api/tree/values"
  request.success (data) -> insertValues(data)

unless $('ul.seed_values').length == 0
  setInterval ->
    update_totals()
  , 1500

insertValues = (data) ->
  if data != previous_data
    previous_data = data
    console.log(data)
    $('h2.seed').text('$' + data.seed) if data.seed && isInteger(data.seed)
    $('h2.clicks').text(data.clicks) if data.clicks && isInteger(data.clicks)
    $('h2.total').text('$' + data.total) if data.total && isInteger(data.total)

isInteger = (num) ->
  (num + '').match(/^d+$/)
