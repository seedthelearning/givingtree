update_totals = ->
  request = $.get "/api/tree/values"
  request.success (data) -> insertValues(data)

unless $('ul.seed_values').length == 0
  setInterval ->
    update_totals()
  , 1500

insertValues = (data) ->
  console.log(data)
  $('h2.seed_amount').text('$' + data.seed)
  $('h2.participants').text(data.clicks)
  $('h2.total_raised').text('$' + data.tree)
